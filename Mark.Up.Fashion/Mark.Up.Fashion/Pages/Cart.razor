@page "/cart"
<head>
    <link href="./css/cart.css" rel="stylesheet" />
</head>
<div class="cart-container">
    <h2>Shopping Cart</h2>
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Product 1</td>
                <td>&#8373;10.00</td>
                <td>   
                    <input type="number" class="quantity-input" value="1">
                    <button class="quantity-btn plus">+</button><span></span>
                    <button class="quantity-btn minus">-</button>
                </td>
                <td class="product-total">&#8373;10.00</td>
            </tr>
            <tr>
                <td>Product 2</td>
                <td>&#8373;15.00</td>
                <td>
                    <button class="quantity-btn minus">-</button>
                    <input type="number" class="quantity-input" value="1">
                    <button class="quantity-btn plus">+</button>
                </td>
                <td class="product-total">&#8373;15.00</td>
            </tr>
            <tr>
                <td>Product 3</td>
                <td>&#8373;20.00</td>
                <td>
                    <button class="quantity-btn minus">-</button>
                    <input type="number" class="quantity-input" value="1">
                    <button class="quantity-btn plus">+</button>
                </td>
                <td class="product-total">&#8373;20.00</td>
            </tr>
        </tbody>
    </table>
    <div class="cart-total">
        <span>Total:</span>
        <span class="total-price">&#8373;45.00</span>
    </div>
    <div class="cart-total">
        <a class="accordion-button" href="measurement">CCM Request</a>
    </div>
    <div class="cart-total">
        <select>
            <option>Debit/Credit Card</option>
            <option>Mobile Money</option>
            <option>Paypal</option>
        </select>
        <span><a class="accordion-item" href="#paymentapi">Pay</a></span>
    </div>
</div>

