@page "/measurement"

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Measurement Form</title>
  <link rel="stylesheet" href="./css/measurement.css">
</head>
      <body>
          <form>
            <h2>Shirt Measurements</h2>
            <div class="form-group">
              <label for="neck">Neck (inches)</label>
              <input type="number" id="neck" name="neck" required>
            </div>
            <div class="form-group">
              <label for="chest">Chest (inches)</label>
              <input type="number" id="chest" name="chest" required>
            </div>
            <div class="form-group">
              <label for="waist">Waist (inches)</label>
              <input type="number" id="waist" name="waist" required>
            </div>
            <div class="form-group">
              <label for="sleeve">Sleeve (inches)</label>
              <input type="number" id="sleeve" name="sleeve" required>
            </div>
    
            <h2>Trousers Measurements</h2>
            <div class="form-group">
              <label for="waist-trousers">Waist (inches)</label>
              <input type="number" id="waist-trousers" name="waist-trousers" required>
            </div>
            <div class="form-group">
              <label for="inseam">Inseam (inches)</label>
              <input type="number" id="inseam" name="inseam" required>
            </div>
        <div class="form-group">
            <label for="tigh">Tigh circumference (inches)</label>
            <input type="number" id="tigh" name="tigh" required>
        </div>
        <div class="form-group">
            <label for="image">Image of desired style</label>
            <input type="file" name="image" accept="image/*">
        </div>
    
            <div class="form-group">
              <button type="submit">Submit</button>
            </div>
          </form>
      </body>
</html>

